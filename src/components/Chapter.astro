---
export interface Props {
  name: string;
}

const props = Astro.props;
---


<div class="chapter">
  <p class="name">{props.name}</p>
  <div class="content">
    <slot />
  </div>
</div>

<style is:global>
  .chapter .name {
    text-transform: uppercase;
    font-weight: bold;
    margin: 0;
  }

  .chapter .content > * {
    margin-top: 0;
    margin-bottom: 1em;
  }

  .chapter li p {
    font-style: italic;
    margin: 0;
  }

  .chapter ul {
    list-style-type: lower-greek;
  }

  .chapter li::marker {
    color: rgb(128, 128, 128);
  }
</style>